<style>
	#container {
		width: 95%;
		margin: 0 auto;
		margin-top: 20px;
	}
	#header {
		margin: 0 auto;
		margin-top: 10px;
		width: 95%;
		border-width: 1px solid #8e8e8e;
	}
	#left {
		float:left;
		text-align: right;
		width: 19%;
	}
	#right {
		float: left;
		width: 19%;
		margin-left: 10px;
	}
	#logout {
		float: left;
		width: 200px;
		margin-left: 300px;
	}
	.clear {
		clear: both;
	}
</style>

<div class="container">
	<div class="row clearfix">

		<div class="col-md-12 column">
			<nav class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation">
				<div class="navbar-header">
					 <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"> <span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button> <a class="navbar-brand" href="#">DojoLoans</a>
				</div>

				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav">
						<li>
							<a href="/regborrowers/show">Active Loans</a>
						</li>
						<li class="active">
							<a href="#">New Loan</a>
						</li>
					</ul>
					<ul class="nav navbar-nav">
						<li><a href='#'><%=session[:name]%></a></li>
						<li class="divider"></li>
						<li><a href='#' style='color: #28F86E'>Balance: <%=number_to_currency(session[:lendable])%></a></li>
					</ul>
					<ul class="nav navbar-nav navbar-right">
						<li>
							<a href='/users/logout'>LOGOUT</a>
						</li>
						<li class='divider'>&nbsp;&nbsp;&nbsp;</li>
					</ul>
				</div>
			</nav>
		</div>


		<div class="panel panel-primary sbs" style="margin-top: 70px">
			<div class="panel-heading">New Loan Request</div>
				<div id='borrower' class="panel-body">
				<%= simple_form_for @history, :url => loans_create_path, html: { class: 'form-vertical' } do |f| %>

				  <% @tmp = @history %>
				  <%= render 'shared/form_regerrors' %>

				  <%= f.input :needed_for, placeholder: 'Short title for need...' %>
				  <%= f.input :description, as: :text, placeholder: 'Full description of need...' %>
				  <%= f.input :loan, as: :float, placeholder: 'Amount looking to borrow...' %>
				  <%= f.button :submit, 'CREATE LOAN', :class => 'btn btn-primary' %>
				<% end %>
				</div>
				<div class="panel-footer">Create a new loan need here so lenders will see your request.</div>
			</div>
		</div>

	</div>

</div>